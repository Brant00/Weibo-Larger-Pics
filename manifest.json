{
  "manifest_version": 2,
  "name": "新浪微博之我要看大图",
  "description": "新浪微博看图增强：画廊模式：轻松查看本页所有大图；缩略图增加浮动工具栏：快速进入大图页面、图片详情页面和原始地址。",
  "version": "1.2.4.1",
  "minimum_chrome_version": "21",
  "icons": {
    "128": "icons/icon_128.png",
    "48": "icons/icon_48.png",
    "32": "icons/icon_32.png"
  },
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "content_scripts": [ {
     "exclude_globs": [ "http://s.weibo.com/user/*", "http://weibo.com/app/*", "http://weibo.com/app" ],
     "exclude_matches": [  ],
     "include_globs": [ "http://t.sina.com.cn/*", "http://weibo.com/*", "http://www.weibo.com/*", "http://media.weibo.com/*", "http://s.weibo.com/*", "http://hot.weibo.com/*", "http://huati.weibo.com/*", "http://s.weibo.com/pic/*"],
     "js": [ "WeiboLargerPics.user.js" ],
     "matches": [ "http://*.weibo.com/*", "http://t.sina.com.cn/*" ],
     "run_at": "document_end"
  } ]
}